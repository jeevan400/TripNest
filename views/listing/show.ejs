<% layout("/layouts/boilerplate.ejs") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const list = <%- JSON.stringify(list) %>;
</script>
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-lg-8 offset-lg-2 mt-3">
      <h3><%= list.title %></h3>
    </div>
    <div class="card col-12 col-md-8 offset-md-2 col-lg-8 offset-lg-2 listing-card">
      <img
        src="<%= list.image.url %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          Owned by: <i><b><%= list.owner.username %></b></i>
        </p>
        <p class="card-text"><%= list.description %></p>
        <p class="card-text">
          &#8377;<%= list.price.toLocaleString("en-in") %> / night
        </p>
        <p class="card-text"><%= list.location %></p>
        <p class="card-text"><%= list.country %></p>
      </div>
    </div>
  </div>
  <% if(currentUser && currentUser._id.equals(list.owner._id)){%>
  <div class="col-12 col-md-8 offset-md-2 col-lg-8 offset-lg-2 btns mb-3">
    <a href="/listings/<%= list._id %>/edit" class="btn btn-dark col-2 edit-btn"
      >Edit</a
    >
    <form action="/listings/<%= list._id %>?_method=DELETE" method="post">
      <button class="btn btn-dark offset-3">Delete</button>
    </form>
  </div>
  <% } %>
  <div class="col-12 col-md-8 offset-md-2 col-lg-8 offset-lg-2 mb-3 mt-3">
    
    <% if(currentUser){ %>
      <hr />
    <h4 class="leave-a-review">Leave a Review</h4>
    <form
      action="/listings/<%= list._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <!-- starability rating -->
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-heartbeat">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible"></label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good"></label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average"></label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good"></label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing"></label>
        </fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="commnent" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          class="form-control"
          id="comment"
          cols="30"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review.</div>
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <% } %>
    <% if(list.reviews.length){ %>
    <div class="row">
      <p><b> All Reviews </b></p>
      <% for(let review of list.reviews){ %>
      <div class="card col-5 mb-3 ms-3">
        <div class="card-body mt-3">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>
        </div>
        <% if(currentUser && currentUser._id.equals(review.author._id)){%>
        <form
          action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="post"
          class="mb-3 mt-3"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
        <% } %>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
   <div class="col-12 col-md-8 offset-md-2 col-lg-8 offset-lg-2 mb-3 mt-3">
    <h3>Where you'll be</h3>
    <div id="map"></div>
   </div>

   <script src="/js/map.js"></script>
