<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-12 col-md-8 offset-md-2 col-lg-4 offset-lg-4 login-form">
    <h2>Login</h2>
    <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
        </div>
        <button class="btn btn-success mb-3">Login</button>
    </form>
  </div>
</div>
