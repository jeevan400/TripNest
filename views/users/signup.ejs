<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-12 col-md-8 offset-md-2 col-lg-4 offset-lg-4 login-form">
    <h2>SignUp on TripNest</h2>
    <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Username should be required.</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Email should be required.</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Password should be required.</div>
        </div>
        <button class="btn btn-success mb-3">SignUp</button>
    </form>
  </div>
</div>
